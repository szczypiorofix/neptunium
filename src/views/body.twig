<body class="{{ templateName }}">
    {% include 'components/navbar.twig' %}

    <div class="container">
        <!--  DEBUG ERROR DATA_ -->
        {% if debugErrorData %}
            <div class="error-container">
                {% for ddKey,ddValue in debugErrorData %}
                    <div>{{ ddKey }} : {{ ddValue }}</div>
                {% endfor %}
            </div>
        {% endif %}
        <!--  _DEBUG ERROR DATA -->

        <!--  DEBUG WARNING DATA_ -->
        {% if debugWarningData %}
            <div class="error-container">
                {% for ddKey,ddValue in debugWarningData %}
                    <div>{{ ddKey }} : {{ ddValue }}</div>
                {% endfor %}
            </div>
        {% endif %}
        <!--  _DEBUG WARNING DATA -->

        <!--  DEBUG INFO DATA_ -->
        {% if debugInfoData %}
            <div>
                <h3>Debug data:</h3>
                {% for ddKey,ddValue in debugInfoData %}
                    {% if ddValue %}
                        <p>Part: {{ ddKey }}</p>
                        <div>
                            {% for debugInfoKey,debugInfoValue in ddValue %}
                                <p>Class: {{ debugInfoKey }}</p>
                                {% for dk,dv in debugInfoValue %}
                                    <pre>
                            Name: {{ dk }}
                            Type: {{ dv.type.name }}
                            Length - {{ dv.length }}
                            Collation - {{ dv.collation }}
                            Comment - {{ dv.comment }}
                        </pre>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
        <!--  _DEBUG INFO DATA -->

        <!--  NOTIFICATIONS_ -->
        {% if notifications %}
            <div>
                <h3>Notifications:</h3>
                <div>
                    {% for notificationKey, notificationValue in notifications %}
                        <div class="notifications-container">
                            <h4>{{ notificationKey }}</h4>
                            {% include 'components/notification.twig' with { 'snackbar' : {'type': notificationValue.type, 'text': notificationValue.text} } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
        <!--  _NOTIFICATIONS -->

        <!--- TEMPLATE_ -->
        {% if templateFileName %}
            {% include 'pages/' ~ templateFileName %}
        {% else %}
            <p>Template file not found!</p>
        {% endif %}
        <!--- _TEMPLATE -->
    </div>
<!-- SCRIPTS PART -->
<script type="module" src="{{ baseUrl }}/static/js/main.js?v={{ appVer }}"></script>
</body>
